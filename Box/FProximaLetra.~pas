procedure TABC.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin

  if key = 27 then
    begin
     Application.Terminate;
    end;

end;

procedure TABC.FormShow(Sender: TObject);
begin
  Ftmr_ultima_digitacaoProximaLetra := Time;
  TProximaLetra:=True;
  SaltoProximaLetra;
  Timer1.Enabled:=True;
end;

procedure TABC.Timer1Timer(Sender: TObject);
begin
  Ftmr_agoraProximaLetra := time;
  if (Ftmr_agoraProximaLetra - Ftmr_ultima_digitacaoProximaLetra) >= strtotime('00:00:05') then //A tela de login aparecerá em 03 minutos
  begin
  Timer1.Enabled:=False;
  ABC.Close;
  end;
end;

procedure TABC.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  TProximaLetra:=False;

  if Pricipal.ListView1.Items.Count >0 then
           begin
            try


              if TelaVerificaVideo = False then
                begin
                  Pricipal.ListView1.SetFocus;
                  Pricipal.ListView1.Items.Item[0].Selected := true;
                  Pricipal.ListView1.Items.Item[0].Focused := true;
                end
              else
                begin
                 Tela.ListView1.SetFocus;
                 Tela.ListView1.Items.Item[0].Selected := true;
                 Tela.ListView1.Items.Item[0].Focused := true;
              end;
           except
           end;
         end;

end;

   procedure TABC.FDireita;
  var
  Saltos :Integer; // Somente pra controle do DBPASTA com o For que mudandao de pagina
  begin
 i := i + 1;
 DMG.TBPASTAS.Next;
  if i < totGru then
 begin
 end
   else
  begin
  // ShowMessage('Próximo bloco de '+IntToStr(totGru));
        totGru := totGru + 8;
        im1 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im2 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im3 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im4 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im5 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im6 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im7 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im8 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;

        for Saltos := 1 to 8 do
         begin
          DMG.TBPASTAS.Prior;
         end;



      if Cont - i = 1 then
        begin
         for Saltos := 1 to 8 do
         begin
         DMG.TBPASTAS.Next;
         end;
          Pricipal.ima2.Visible := false;
          Pricipal.ima3.Visible := false;
          Pricipal.ima4.Visible := false;
          Pricipal.ima5.Visible := false;
          Pricipal.ima6.Visible := false;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;

        if Cont - i = 2 then
        begin

         for Saltos := 1 to 7 do
          begin
          DMG.TBPASTAS.Next;
          end;
          Pricipal.ima3.Visible := false;
          Pricipal.ima4.Visible := false;
          Pricipal.ima5.Visible := false;
          Pricipal.ima6.Visible := false;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;

        if Cont - i = 3 then
        begin
         for Saltos := 1 to 7 do
          begin
          DMG.TBPASTAS.Next;
          end;
          Pricipal.ima4.Visible := false;
          Pricipal.ima5.Visible := false;
          Pricipal.ima6.Visible := false;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;

        if Cont - i = 4 then
        begin
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          Pricipal.ima5.Visible := false;
          Pricipal.ima6.Visible := false;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;

        if Cont - i = 5 then
        begin
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          Pricipal.ima6.Visible := false;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;


        if Cont - i = 6 then
        begin
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          Pricipal.ima7.Visible := false;
          Pricipal.ima8.Visible := false;
        end;

        if Cont - i = 7 then
        begin
          DMG.TBPASTAS.Next;
          DMG.TBPASTAS.Next;
          Pricipal.ima8.Visible := false;
        end;

    if Cont - i = 8 then
        begin
          DMG.TBPASTAS.Next;
        end;
       conta:= 0 ;
end;


 if i = Cont then
      begin
 //  volte para o começo

        Pricipal.ima1.Visible := True;
        Pricipal.ima2.Visible := True;
        Pricipal.ima3.Visible := True;
        Pricipal.ima4.Visible := True;
        Pricipal.ima5.Visible := True;
        Pricipal.ima6.Visible := True;
        Pricipal.ima7.Visible := True;
        Pricipal.ima8.Visible := True;
        Pricipal.Bord1.Visible := False;
        Pricipal.Bord2.Visible := False;
        Pricipal.Bord3.Visible := False;
        Pricipal.Bord4.Visible := False;
        Pricipal.Bord5.Visible := False;
        Pricipal.Bord6.Visible := False;
        Pricipal.Bord7.Visible := False;
        Pricipal.Bord8.Visible := False;
        Pricipal.Bord1.Visible := True;

        DMG.TBPASTAS.First;
        i := 0;
        totGru := 8;
        im1 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im2 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im3 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im4 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im5 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im6 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im7 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.Next;
        im8 := DMG.TBPASTAS.Fields[1].AsString;
        DMG.TBPASTAS.First;
        conta:= 0 ;
      end;
    ABC.caminhodapasta;
end;

procedure TABC.caminhodapasta;
begin

    conta := conta + 1;

   if conta = 8 then
      begin
        caminhopasta := im8;
      end;

      if conta = 7 then
      begin
        caminhopasta := im7;
      end;

      if conta = 6 then
      begin
        caminhopasta := im6;
      end;

      if conta = 5 then
      begin
        caminhopasta := im5;
      end;

      if conta = 4 then
      begin
        caminhopasta := im4;
      end;

      if conta = 3 then
      begin
        caminhopasta := im3;
      end;

      if conta = 2 then
      begin
        caminhopasta := im2;
      end;

   if conta = 1 then
      begin
        caminhopasta := im1;
      end;

end;


procedure TABC.FormKeyUp(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin

    if key = AdicionaCreditos then
 begin
  Pricipal.adicionacredito;
  if creEspecial = 18 then
    begin
       credito:=credito + 1;
       CreEspecial:=0;
    end
    else
    begin
      CreEspecial:=CreEspecial + 2;
    end;

   if TelaVerificaVideo = False then
     begin
        Pricipal.adicionacredito;
       end
       else
       begin
        Tela.ezibecredito;
       end;
     end;

    if key = 65 then
      begin
      FRC.ProximaLetra;
      SaltoProximaLetra;
     end;

     if key <> 65 then
      begin
        ABC.Close;
          if Pricipal.ListView1.Items.Count >0 then
           begin
            try


              if TelaVerificaVideo = False then
                begin
                  Pricipal.ListView1.SetFocus;
                  Pricipal.ListView1.Items.Item[0].Selected := true;
                  Pricipal.ListView1.Items.Item[0].Focused := true;
                end
              else
                begin
                 Tela.ListView1.SetFocus;
                 Tela.ListView1.Items.Item[0].Selected := true;
                 Tela.ListView1.Items.Item[0].Focused := true;
              end;
           except
           end;
         end;


      end;
end;

end.
